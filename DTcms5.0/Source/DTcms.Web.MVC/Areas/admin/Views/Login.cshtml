@using DTcms.Model;
@{
    ViewBag.Title = "登录页面";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
    DTcms.Model.sysconfig sysConfig = ViewData["sysConfig"] as DTcms.Model.sysconfig;
}
<script>
   $(function () {
      //检测IE
      if ('undefined' == typeof (document.body.style.maxHeight)) {
         window.location.href = 'ie6update/index';
      }
      $("body").addClass("loginbody");
      $("#txtUserName").focus();
   });
</script>
@using (Html.BeginForm("SubmitLogin", "Login", FormMethod.Post, new { id = "form1" })) {
   <div style="width:100%; height:100%; min-width:300px; min-height:260px"></div>
   <div class="login-wrap">
      <div class="login-logo">LOGO</div>
      <div class="login-form">
         <div class="col">
            @Html.TextBox("txtUserName","",new {@class="login-input",placeholder="管理员账号", title="管理员账号"})
            <label class="icon user" for="txtUserName"></label>
         </div>
         <div class="col">
            @Html.Password("txtPassword","",new{@class="login-input", placeholder="管理员密码", title="管理员密码"})
            <label class="icon pwd" for="txtPassword"></label>
         </div>
         <div class="col">
            <input type="submit" id="btnSubmit" class="login-btn" value="登录" />
         </div>
      </div>
      <div class="login-tips"><i></i><p id="msgtip">@ViewBag.msgtip</p></div>
   </div>
}
<div class="copy-right">
   <p>版权所有 @sysConfig.webcompany Copyright © 2015 - 2016 @sysConfig.sysencryptstring Inc. All Rights Reserved.</p>
</div>