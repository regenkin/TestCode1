@using DTcms.Model;
@using DTcms.Common;
@{
   DTcms.Model.site_channel site = ViewData["site"] as DTcms.Model.site_channel;
   DTcms.Model.siteconfig config = ViewData["config"] as DTcms.Model.siteconfig;
   DTcms.Web.MVC.UI.Controllers.BaseController bc = ViewBag.BasePage as DTcms.Web.MVC.UI.Controllers.BaseController;
   string channel = ViewBag.Channel as string;
}
<!DOCTYPE html>
<html>
<head>
   <meta charset="utf-8" />
   <meta name="author" content="@site.domain" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
   <meta name="format-detection" content="telephone=no">
   <meta name="apple-touch-fullscreen" content="yes">
   <meta name="apple-mobile-web-app-capable" content="yes" >
   <meta name="apple-mobile-web-app-status-bar-style" content="black" >
   <meta name="keywords" content="@site.seo_keyword" />
   <meta name="discription" content="@site.seo_description" />
   <title>@ViewBag.Title</title>
   <link href="~/Content/waves.css" rel="stylesheet" />
   <link href="~/Areas/Web/Scripts/artdialog/ui-dialog.css" rel="stylesheet" />
   <link href="~/templates/main/mobile/css/baoliao.css" rel="stylesheet" />
   <link href="~/templates/main/mobile/css/public.css" rel="stylesheet" />
   <link href="~/templates/main/mobile/css/login.css" rel="stylesheet" />
   <link href="~/templates/main/mobile/css/user.css" rel="stylesheet" />
   <script src="~/templates/main/mobile/js/jquery-1.8.3.min.js"></script>
   <script src="~/Scripts/waves.min.js"></script>
   <script src="~/Areas/Web/Scripts/artdialog/dialog-plus-min.js"></script>
   <script src="~/templates/main/mobile/layer/layer.js"></script>
   <script src="~/templates/main/mobile/js/common.js"></script>
   @RenderSection("HeaderContent",false)
   <script>
      $(window).load(function () {
         $("#status").fadeOut();
         $("#preloader").delay(350).fadeOut("slow");
      })
   </script>
</head>
<body>
<div class="mobile">
   <div id="preloader">
      <div id="status">
         <p class="center-text"><span>拼命加载中···</span></p>
      </div>
   </div>
   <header>
      <div class="header">
         <a class="new-a-back" href="javascript:history.back();"><span><img src="~/templates/@site.build_path/mobile/images/iconfont-fanhui.png"></span></a>
         <h2>@ViewBag.Title</h2>
         <div style=" position: absolute; right: 10px; top: 10px; ">
            <p style="display:inline-block; height:25px;line-height:25px;width:25px;" data-icon="2"></p></div>
         <div style=" position: absolute; right: 35px; top: 10px; "><p style="display:inline-block; height:25px;line-height:25px;width:25px;" id="nav_new_more" data-icon="1"></p></div>
         <!--<img src="~/templates/@site.build_path/mobile/images/iconfont-shouye.png">-->
      </div>
   </header>
   @RenderBody()

   <!-- 导航菜单 -->
   @RenderPage("~/Areas/Web/Views/main/mobile/Shared/partial_ucenter_nav.cshtml")
   <!-- /导航菜单 -->
   <footer>
   <div class="login_out w">
      <a href="@bc.linkurl("usercenter","exit")"><span><img src="~/templates/@site.build_path/mobile/images/iconfont-tuichu.png"></span><i>安全退出</i></a>
   </div>
   @RenderPage("~/Areas/Web/Views/main/mobile/Shared/partial_footer.cshtml")
   </footer>
   @RenderSection("Scripts", required: false)
</div>
</body>
</html>