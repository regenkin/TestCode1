@using DTcms.Model;
@using DTcms.Common;
@{
    DTcms.Model.sites site = ViewData["site"] as DTcms.Model.sites;
    Layout = "~/Areas/Web/Views/" + site.templet_path + "/Shared/_LayoutShow.cshtml";
}
@section HeaderContent{
    <link rel="stylesheet" type="text/css" href="~/templates/@site.templet_path/css/loaders.min.css" />
    <link rel="stylesheet" type="text/css" href="~/templates/@site.templet_path/css/loading.css" />
    <link rel="stylesheet" type="text/css" href="~/templates/@site.templet_path/css/base.css" />
    <link rel="stylesheet" type="text/css" href="~/templates/@site.templet_path/css/style.css" />
}

@section Scripts_Head{
    <script src="~/templates/@site.templet_path/js/jquery.min.js" type="text/javascript" charset="utf-8"></script>
    <script type="text/javascript">
        $(window).load(function () {
            $(".loading").addClass("loader-chanage")
            $(".loading").fadeOut(300)
        })
    </script>
}
@section Body_front{
    <!--loading页开始-->
    <div class="loading">
        <div class="loader">
            <div class="loader-inner pacman">
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>
    </div>
    <!--loading页结束-->
}

<header class="top-header">
    <a class="text texta" href="index.cshtml">取消</a>
    <h3>登录</h3>
    <a class="text" href="sign.cshtml">注册</a>
</header>

<div class="login">
    <form id="loginform" name="loginform" url="{config.webpath}tools/submit_ajax.ashx?action=user_login&site={site.build_path}">
        <ul>
            <li>
                <img src="~/templates/@site.templet_path/images/footer01.png" />
                <label>企业号</label>
                <input type="text" placeholder="输入企业号" />
            </li>
            <li>
                <img src="~/templates/@site.templet_path/images/login.png" />
                <label>员工号</label>
                <input type="text" placeholder="输入员工号" />
            </li>
            <li>
                <img src="~/templates/@site.templet_path/images/password.png" />
                <label>密码</label>
                <input type="password" placeholder="请输入密码" />
            </li>
        </ul>
        <input type="submit" value="登录" />
    </form>
</div>
