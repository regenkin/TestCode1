    .datagrid-cell {
        line-height: 27px;
        font-size: 14px;
    }

    .panel-header {
        height: 22px;
    }

    .panel-title {
        height: 22px;
        line-height: 22px;
        font-size: 14px;
    }

    lable, span, font, td, .tabs-title, .l-btn-text, .menu-text, .tree-title, .combobox-item, .textbox .textbox-text, .datagrid-header .datagrid-cell span, .panel-body {
