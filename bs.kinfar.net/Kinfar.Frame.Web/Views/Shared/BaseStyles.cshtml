@using Kinfar.Frame.Common.HttpHelper;
@{
    string cookieTheme = HttpCookieHelper.GetCookie("theme");
    string themeName = string.IsNullOrWhiteSpace(cookieTheme) ? "default" : cookieTheme;
}
<link class="easyuiTheme" type="text/css" rel="Stylesheet" href="@Url.Content("~/Scripts/jquery-easyui/themes/" + themeName + "/easyui.css")" />
<link type="text/css" rel="Stylesheet" href="@Url.Content("~/Scripts/jquery-easyui/themes/icon.css")" />
<link type="text/css" rel="Stylesheet" href="@Url.Content("~/Scripts/jquery-easyui/themes/color.css")" />
<link type="text/css" rel="Stylesheet" href="@Url.Content("~/Scripts/jquery-plug/jquery.autocomplete.css")" />
<link type="text/css" rel="Stylesheet" href="@Url.Content("~/Css/global.css")" />
<link type="text/css" rel="Stylesheet" href="@Url.Content("~/Css/icon.css")" />
<link type="text/css" rel="Stylesheet" href="@Url.Content("~/Css/font-awesome/css/font-awesome.min.css")" />
